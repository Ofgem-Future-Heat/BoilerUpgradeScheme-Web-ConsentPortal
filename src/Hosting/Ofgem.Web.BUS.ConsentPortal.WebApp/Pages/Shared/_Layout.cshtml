<!DOCTYPE html>
<html lang="en-gb">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Confirm a Boiler Upgrade Scheme application</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ofgem.Web.BUS.ConsentPortal.WebApp.styles.css" asp-append-version="true" />
</head>
<body class="govuk-template__body  js-enabled">
    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
    <a href="#main-content" class="govuk-skip-link" data-module="govuk-skip-link">Skip to main content</a>
    <partial name="_Header.cshtml" , model="null" view-data="ViewData" />

    <div class="govuk-width-container">
        @RenderSection("breadcrumbs", required: false)

        <main id="main-content" role="main" class="govuk-main-wrapper govuk-main-wrapper--auto-spacing">
            @RenderBody()
        </main>
    </div>

    <partial name="_Footer.cshtml" , model="null" view-data="ViewData" />


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/node_modules/govuk-frontend/govuk/all.js" type="text/javascript"></script>    
    @*<script src="~/js/site.js" asp-append-version="true"></script> placeholder for custom javascript*@
    <script>window.GOVUKFrontend.initAll()</script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>